{% extends 'base.html.twig' %}

{% block title %}Contractez un prêt {% endblock %}


{% block body %}
<div class="container w-50">
    <h1 class="mb-4">Nouveau prêt</h1>

    <form action="{{ url('loanCreate') }}" method="POST">
        <div class="form-group mb-3">
            <label class="mb-2" for="accountId">Compte</label>
            <select class="form-control" id="account" name="accountId">
            {% for account in accounts %}
                <option value="{{ account.id }}">{{ account.type }} - {{ account.name }}</option>
            {% endfor %}
            </select>
        </div>
        <div class="form-group mb-3">
            <label class="mb-2" for="quantity">Montant</label>
            <div class="d-flex">
                <div class="input-group">
                    <input type="number" class="form-control" name="euro" id="euro" value="0" min="0">
                    <div class="input-group-append">
                      <span class="input-group-text" id="inputGroupPrepend3">€</span>
                    </div>
                </div>
                <div class="input-group ms-1" style="width: 30%">
                    <input type="number" class="form-control" name="cents" id="cents" value="0" min="0" max="99">
                    <div class="input-group-append">
                      <span class="input-group-text" id="inputGroupPrepend3">cents</span>
                    </div>
                </div>
            </div>
        </div>

        <input type="submit" class="btn btn-danger" value="Faire un prêt">
    </form>

</div>
{% endblock %}
