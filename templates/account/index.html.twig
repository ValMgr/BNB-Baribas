{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Mon dashboard :</h2>
            <div class="actions">
                <a href="/account/create" class="btn btn-danger mx-2">Créer un compte</a>
                <a href="/account/loan" class="btn btn-primary mx-2">Faire un prêt</a>
                <a href="/account/delete" class="btn btn-delete mx-2">Supprimer un compte</a>
            </div>
        </div>

        <ul class="list-group mt-5 w-50 mx-auto">
            {% for account in accounts %}
                <li class="account-item mt-4 d-flex align-items-center">
                    {{ account.type }} - {{ account.name }}
                    <span class="mx-5" style="flex-grow: 1;font-size: .7em">RIB: {{ account.RIB }}</span>
                    <span class="amount" style="margin-left: auto">{{ (account.amount / 100)|round(0, 'floor') }},{{ (account.amount % 1000)| strpad(2,'0') }} € </span>
                </li>
            {% endfor %}
        </ul>
    </div>

    <style>
        .account-item{border-bottom: 1px solid #ced4da;padding: 1em;}
    </style>

{% endblock %}
