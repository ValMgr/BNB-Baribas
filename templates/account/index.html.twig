{% extends 'base.html.twig' %}

{% block title %}Mes comptes{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Vos comptes :</h2>
            <div class="actions">
                <a href="/account/create" class="btn btn-danger mx-2">Crée un compte</a>
                <a href="/account/loan" class="btn btn-primary mx-2">Faire un prêt</a>
            </div>
        </div>

        <ul class="list-group mt-5 w-50 mx-auto">
            {% for account in accounts %}
                <li class="account-item mt-4 d-flex justify-content-between align-items-center">
                    {{ account.type }} - {{ account.name }}
                    <span class="amount">{{ (account.amount / 100)|round(0, 'floor') }},{{ (account.amount % 1000)| strpad(2,'0') }} €</span>
                </li>
            {% endfor %}
        </ul>
    </div>

    <style>
        .account-item{
            border: 1px solid #000;
            border-radius: 5px;
            padding: 1em;
        }
    </style>

{% endblock %}
