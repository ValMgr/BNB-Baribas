{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    
</style>


{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="container w-50 mt-5">
    <div class="text-center my-4">
        <img src="./img/logo.png" alt="le logo">
    </div>
    
    <div class="d-flex flex-column justify-content-around mt-5">
        <a href="/account" class="btn btn-primary mx-2 mb-4">Mes comptes</a>
        <a href="/virement" class="btn btn-primary mx-2 mb-4">Faire un virement</a>
        <a href="/logout" class="btn btn-primary mx-2">Se déconnecter</a>
    
    </div>
</div>
{% else %}
<div class="container w-50 mt-5">
    <div class="text-center my-4">
        <img src="./img/logo.png" alt="le logo">
    </div>
    <h1 class="text-center">Bienvenue sur BNB-Baribas</h1>
    
    <div class="d-flex flex-column justify-content-around mt-5">
        <a class="btn btn-secondary" href="/login">Se connecter à mes comptes</a>
        <div class="d-flex flex-column justify-content-around mt-5">
            <p class="mx-auto">Vous n'avez pas de compte ?</p>
            <a class="btn btn-secondary" href="/register">Créer un compte</a>
        </div>
    
    </div>
</div>
{% endif %}


{% endblock %}
